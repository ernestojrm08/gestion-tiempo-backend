<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Proyectos</title>
    <link rel="stylesheet" href="/publico/style.css">
</head>
<body>
    <h1>Gestión de Proyectos</h1>
    <table>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Acciones</th>
        </tr>
        <% proyectos.forEach(proyecto => { %>
            <tr>
                <td><%= proyecto.id %></td>
                <td><%= proyecto.nombre %></td>
                <td><%= proyecto.descripcion %></td>
                <td>
                    <a href="/proyectos/editar/<%= proyecto.id %>">Editar</a>
                    <a href="/proyectos/eliminar/<%= proyecto.id %>" onclick="return confirm('¿Seguro?');">Eliminar</a>
                </td>
            </tr>
        <% }); %>
    </table>
    <a href="/proyectos/agregar">Agregar Proyecto</a>
    <a href="/">Volver al Dashboard</a>
</body>
</html>
